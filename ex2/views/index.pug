extends layout

block content
  .w3-card-4 
    header.w3-container.w3-teal
      h1 Lista de Reparações
    .w3-container
      table.w3-table-all 
        tr 
          th _id
          th Data
          th Nome
          th Matrícula
          th Marca 
          th Número de Intervenções
        each c in clist
          tr
            td
              a(href='/reparacoes/' + c._id)= c._id
            td= c.data
            td= c.nome
            td= c.viatura.matricula
            td
              a(href='/' + c.viatura.marca)= c.viatura.marca
            td= c.nr_intervencoes
    footer.w3-container.w3-teal
      h5 Generated by RPCW2023 in #{d}