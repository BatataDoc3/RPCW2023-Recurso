extends layout

block content
  .w3-card-4
    header.w3-container.w3-teal
      h1 Marca #{marca}
    .w3-container
        h1 Modelos
        ul.w3-ul.w3-card-4
            each m in modelos
                li= m
    h1 Registos 
    .w3-container
        table.w3-table-all 
            tr 
              th _id
              th Data
              th Nome
              th Matrícula
              th Marca 
              th Número de Intervenções
            each c in r
              tr
                td
                  a(href='/' + c._id)= c._id
                td= c.data
                td= c.nome
                td= c.viatura.matricula
                td
                  a(href='/' + c.viatura.marca)= c.viatura.marca
                td= c.nr_intervencoes
    footer.w3-container.w3-teal 
      h5 Generated by RPCW2023 in #{d} - #[a(href="/") Return]